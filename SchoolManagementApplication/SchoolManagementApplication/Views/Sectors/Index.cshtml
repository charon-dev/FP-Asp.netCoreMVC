@model IEnumerable<Sector>
@{
    ViewData["Title"] = "Index";
}

<div class="row pt-4">
    <div class="col-6">
        <h2>Sectors List :</h2>
    </div>  
    <div class="text-end col-6">
        <a class="btn btn-primary" asp-controller="Sectors" asp-action="Create">
            <i class="bi bi-plus-circle-fill"></i>
            Create new sector
        </a>
    </div>
</div>

<br/> <br/>
<table class="table table-bordered table-striped table-active">
    <thead>
        <tr>
            <th>Code</th>
            <th>Name</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var obj in Model)
        {
            <tr>
                <td style="width:40%">@obj.Code</td>
                <td style="width:30%">@obj.Name</td>
                <td>
                    <div class="w-75 btn-group" role="group">
                        <a class="btn btn-warning mx-2" asp-controller="Sectors" asp-action="Edit" asp-route-code="@obj.Code">
                            <i class="bi bi-pencil-square"></i> Edit
                        </a>
                        <a class="btn btn-danger mx-2" asp-controller="Sectors" asp-action="Delete" asp-route-code="@obj.Code">
                            <i class="bi bi-trash3"></i> Delete
                        </a>
                    </div>                  
                </td>
            </tr>
        }
    </tbody>
</table>

